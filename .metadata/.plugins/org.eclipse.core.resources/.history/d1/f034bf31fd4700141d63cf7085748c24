		// Collection.sort(clients,comparator);
		
	}
	
	public int getSize() {
		return clients.size();
	}
	

	public void Order() {
		Iterator<Client> iterator = clients.iterator();
		while (iterator.hasNext()) {
			Client client = (Client)iterator.next();
			// client.Order();
		}
	}

